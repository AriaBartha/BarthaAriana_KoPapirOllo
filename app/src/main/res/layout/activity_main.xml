<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:id="@+id/imageViewGamer"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A te választásod"
            android:textSize="40sp"
            android:textColor="@color/grey"
            android:id="@+id/gamersChoice"
            android:layout_marginBottom="40dp"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:id="@+id/imageViewComputer"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A gép választása"
            android:textSize="40sp"
            android:textColor="@color/grey"
            android:id="@+id/computersChoice"
            android:layout_marginBottom="40dp"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score"
            android:text="Eredmény: "
            android:textSize="25sp"
            android:textColor="@color/grey"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gamersScore"
            android:text="Ember: "
            android:textSize="25sp"
            android:textColor="@color/grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gamersScoreNumber"
            android:textSize="25sp"
            android:text="0"
            android:textColor="@color/grey"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/computersScore"
            android:text=" Computer: "
            android:textSize="25sp"
            android:textColor="@color/grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/computersScoreNumber"
            android:textSize="25sp"
            android:text="0"
            android:textColor="@color/grey"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rockButton"
            android:text="KŐ"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@color/grey"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paperButton"
            android:text="PAPÍR"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:layout_margin="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scissorsButton"
            android:text="OLLÓ"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@color/grey"/>
    </LinearLayout>

</LinearLayout>